            <li><a href="/"><img src="{{ url_for('img', path='default/logo.png') }}" width="100"/></a></li>
            {% block navigation %}
            {% endblock navigation %}
        </ul>
        <ul class="flex gap-5 mr-10">
            <li>Мой аккаунт</li>
            <li>Выход</li>
        </ul>
    </nav>
</div>
{% block bg_img %}
<img class="center-fit" src="{{ url_for('img', path='default/31812.jpg') }}" width="100%" height="100%">    
